{
  "name": "雨课堂代签到系统",
  "version": "1.0.0",
  "description": "雨课堂多账号自动签到系统",
  "server": {
    "host": "0.0.0.0",
    "port": 443,
    "ssl_ip": "1.1.1.1"
  },
  "settings": {
    "max_concurrent_requests": 10,
    "request_timeout": 15000,
    "task_cleanup_interval": 300000,
    "task_expire_time": 1800000,
    "max_tasks_in_memory": 100
  },
  "features": {
    "wechat_login": true,
    "batch_signin": true,
    "instant_signin": true,
    "account_management": true
  },
  "security": {
    "enable_cors": true,
    "rate_limit": false,
    "session_timeout": 3600000,
    "delete_password": "passwd"
  },
  "logging": {
    "level": "info",
    "max_file_size": "10MB",
    "max_files": 5
  }
}
